<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context="com.kuxiao.usercar.MainActivity" >

    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <EditText
        android:id="@+id/id_ev_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="#ffffffff"
        android:clickable="true"
        android:drawableLeft="@drawable/search"
        android:gravity="center_vertical"
        android:hint="请输入您的目的地"
        android:padding="5dp"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/id_tv_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/location"
            android:gravity="center"
            android:padding="10dp"
            android:text="附近"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/id_tv_navigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/pointer"
            android:gravity="center"
            android:padding="10dp"
            android:text="导航"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/id_tv_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/call"
            android:gravity="center"
            android:padding="10dp"
            android:text="呼叫"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/id_tv_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/user"
            android:gravity="center"
            android:padding="10dp"
            android:text="我的"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>